{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "lib": ["es2020", "dom"]
    },
    "exclude": [
      "node_modules",
      "dist",
      ".npm"
    ]
  }